<%- include('nav.ejs') %>
<div style="display: flex; justify-content:space-around;margin-top: 10%; margin-bottom: 5%;">
    <h1 >Articles</h1>
<!-- Ajouter un bouton pour rediriger vers la page d'ajout d'article -->
    <a href="/articles/add" class="btn btn-primary" style="padding: 17px;">Ajouter un article</a>

</div>

<div class="container cont " >
   
    <div class="row">
        <% articles.forEach(article => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="/uploads/<%= article.image %>" class="card-img-top" alt="<%= article.Titre %>">
                    <div class="card-body">
                        <small class="text-muted"><%= article.date %></small>
                        <h5 class="card-title"><%= article.Titre %></h5>
                        <p class="card-text"><%= article.Description %></p>
                        <!-- Ajouter un bouton de suppression lié à l'ID de l'article -->
                        <div class="d-flex justify-content-around">
                            <a href="/articles/edit/<%= article.IdArticle %>" class="btn btn-warning mr-2">Éditer</a>
                            <a href="/articles/delete/<%= article.IdArticle %>" class="btn btn-danger ml-2">Supprimer</a>
                        </div>
                     
                    </div>
                </div>
            </div>
            
        <% }); %>
    </div>
 
   
    
</div>
<%- include('footer.ejs') %>