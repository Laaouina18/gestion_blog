<%- include('nav.ejs') %>
    <h1 style="margin: 145px 0px 13px 147px; display: flex; justify-content:left;">modifier un article</h1>
    <form action="/categories/edit/<%= categorie.IdCategory %>" method="POST" enctype="multipart/form-data">
        <label for="nom">Nom de la catégorie :</label>
        <input type="text" id="nom" name="Titre" required><br>
        <div class="form-group">
            <label for="contenu">Contenu :</label>
            <textarea class="form-control" id="contenu" name="Description" required></textarea>
        </div>
    
        <div class="form-group">
            <label for="image">Image :</label>
            <input type="file" class="form-control" id="image" name="image" required>
        </div>
        <!-- Le bouton de soumission -->
        <button type="submit">modifier la catégorie</button>
    </form>
    
    <%- include('footer.ejs') %>