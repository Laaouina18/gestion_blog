<%- include('nav.ejs') %>
<div style="display: flex; justify-content:space-around;margin-top: 10%; margin-bottom: 5%;">
    <h1 >Catégories</h1>

    <a href="/categories/add" class="btn btn-primary" style="padding: 17px;">Ajouter une catégorie</a>

</div>
<div class="container  cont" style=" margin-top: 12%;
margin-left: 17%;
" >
    <div class="row">
        <% categories.forEach(category => { %>
        <div class="col-md-6 mb-6 ml-6" style=" margin-bottom: 10%;">
            <div class=" blog_post">
                <div class="img_pod">
                    <img src="/uploads/<%= category.image %>" id="cat" alt="random image">
                </div>
                <div class="container_copy">
                    <p>12 January 2019</p>
                    <p><%= category.Titre %></p>
                    <p><%= category.Description %></p>
                </div>
               
                <div class="d-flex justify-content-end">
                    <a class="btn_primary m-2" href='#'>Read More</a>
                  
                    <a href="/categories/edit/<%= category.IdCategorie %>" class="btn btn-warning mr-2">Éditer</a>
                    <a href="/categories/delete/<%= category.IdCategorie %>" class="btn btn-danger ml-2">Supprimer</a>
                </div>
            </div>
        </div>
       
        <% }); %>
    </div>
  
</div>

<%- include('footer.ejs') %>